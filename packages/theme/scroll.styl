@import "common/var.styl"


html,body,ul,div
	-ms-scrollbar-darkshadow-color #0a2457
	-ms-scrollbar-highlight-color  #0a2457
	-ms-scrollbar-arrow-color #112757
	-ms-scrollbar-face-color #112757
	-ms-scrollbar-base-color #000000
	-ms-scrollbar-track-color #000000
	&::-webkit-scrollbar
		width $scrollbar-size
		height $scrollbar-size
	&::-webkit-scrollbar-track
		background $scrollbar-track-background
	&::-webkit-scrollbar-thumb
		border-radius $scrollbar-thumb-border-radius
		background-color $scrollbar-thumb-background-color
	&::-webkit-scrollbar-corner {
		background-color: transparent;
	}
