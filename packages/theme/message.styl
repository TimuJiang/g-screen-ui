@import "common/var.styl"
.g-message-box
  position fixed
  display flex
  justify-content center
  top 30px
  left 30px
  right 30px
  bottom 30px
  .g-message-back
    position absolute
    top -30px
    left -30px
    width 100%
    height 100%
    background #000000
    opacity 0.5
    z-index 1
    padding 30px
  .g-message-content
    display flex
    color #fff
    padding 10px
    z-index 99
    border-radius 2px
    align-items center
    justify-content center
    font-size 14px
    .icon-box
      margin-right 4px
  .error
    background #F56C6C
  .info
    background #103F6F
  .success
    background #67C23A
  .warn
    background #E6A23C
  .slideIn
    margin-top 0px
    animation mymove 0.3s
  @keyframes mymove
    from
      margin-top 20px
.center
  align-items center
.top
  align-items flex-start
.bottom
  align-items flex-end
