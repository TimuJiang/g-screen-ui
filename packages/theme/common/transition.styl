@import 'var.styl'

.g-transition_toggle
	transition: all .5s cubic-bezier(.5,0,.1,1)
	&__close
		transform rotate(0deg)
	&__open
		transform rotate(180deg)


.g-list-enter-active,
.g-list-leave-active {
	transition: all .15s cubic-bezier(.5,0,.1,1);
}
.g-list-enter, .g-list-leave-active {
	opacity: 0;
	transform: translateY(-10%);
}

.g-opacity-transition {
	transition: opacity .1s cubic-bezier(.55,0,.1,1);
}
